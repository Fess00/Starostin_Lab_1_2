<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Starostin_2.FirstScheme">
    <Grid HeightRequest="400" WidthRequest="500">
        <StackLayout Grid.Row="1">
            <Picker x:Name="linePicker" Title="Выбор линии:">
                <Picker.Items>
                    <x:String>Прямая</x:String>
                    <x:String>Кривая</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
        <StackLayout Grid.Row="2" HeightRequest="256" WidthRequest="256">
            <Image x:Name="img">

            </Image>
        </StackLayout>
        <StackLayout Grid.Row="3" VerticalOptions="EndAndExpand" HorizontalOptions="Center">
            <Button x:Name="GenerateFir1stScheme" Text="Генерация кривых" Clicked="OnButtonClicked"></Button>
            <Button x:Name="GenerateSVGFir1stScheme" Text="Сохранить в SVG-файле" Clicked="OnButtonSVGClicked" IsEnabled="False"></Button>
        </StackLayout>
    </Grid>
</ContentPage>