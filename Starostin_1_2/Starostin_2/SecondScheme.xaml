<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Starostin_2.SecondScheme">
    <StackLayout>
        <Picker x:Name="linePicker" Title="Выбор линии:">
            <Picker.Items>
                <x:String>Прямая</x:String>
                <x:String>Кривая</x:String>
            </Picker.Items>
        </Picker>
        <Image x:Name="img" HeightRequest="512" WidthRequest="512">
            
        </Image>
        <Button x:Name="GenerateSecondScheme" Text="Генерация кривых" Clicked="OnButtonClicked"></Button>
        <Button x:Name="GenerateSVGSecondScheme" Text="Сохранить в SVG-файле" Clicked="OnButtonSVGClicked" IsEnabled="False"></Button>
    </StackLayout>
</ContentPage>